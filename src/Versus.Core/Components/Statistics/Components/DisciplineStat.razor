<div class=" justify-content-center text-center">
    <div class="row mt-2 ">
        <h3 class="vs-text-shadow" style="text-align: center;">@Name</h3>
    </div>
    <br />
    <div class="row ">
        <div class="col-12">
            <img style="max-width:200px" class="img-fluid vs-img" src=@Source />
        </div>

        <div class="col-12 mt-3">
            <div class="mb-1" style="color: green;font-size:large"> @Localizer["Statistics_Wins"]: 15</div>
            <div class="mb-1" style="color: red;font-size:large"> @Localizer["Statistics_Draws"]: 15</div>
            <div class="vs-white mb-2" style="font-size:large"> @Localizer["Statistics_NumberOfMatches"]: 30</div>
        </div>

    </div>

</div>
@code {
    [Parameter] public string Source { get; set; }
    [Parameter] public string Name { get; set; }
}