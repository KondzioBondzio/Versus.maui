@page "/StatisticsIndex"
@using Versus.Core.Components.Statistics.Components
@inject Radzen.DialogService DialogService

<div id="statcontent" class=" justify-content-center text-center">

    <div class="row mt-1" style=" background: linear-gradient(to right, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.1));">
        <div class="col-12 col-md-4">
    
            <div class="profile-picture-container d-flex justify-content-center mt-3 col-12 ">
                <MudImage Src="_content/Versus.Core/images/JohnyWick.jpg" Alt="" Width="110" Height="110" Elevation="25" Style="border-radius:100px" />
            </div>
            <div class=" d-flex justify-content-center mt-3 col-12 ">
                <h5 class="vs-text-shadow-black">Baba Jaga</h5>
            </div>
        </div>

