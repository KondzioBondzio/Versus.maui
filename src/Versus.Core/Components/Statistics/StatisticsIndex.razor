@code {
    public async Task FetchStat(string src, string name)
    {

        await DialogService.OpenAsync<DisciplineStat>(Localizer["Statistics_Stats"],
               new Dictionary<string, object>() { { "Source", src }, { "Name", name } },
               new Radzen.DialogOptions() { CssClass = "vs-responsive-dialog vs-animated-dialog", Height = "fit-content", Resizable = false, AutoFocusFirstElement = false, Draggable = false });
    }
}

