@using Radzen
@using MudBlazor
<div class="center-wrap">
    <div class="section text-center">
        <h4 class="mb-1 pb-3">@Localizer["Auth_Registration"]</h4>
        <div class="form-group">
            <input type="text" class="form-style" placeholder="@Localizer["Auth_LoginSłownie"]">
        </div>
        <div class="form-group mt-2">
            <input type="email" class="form-style" placeholder="@Localizer["Auth_Email"] ">
        </div>
        <div class="form-group mt-2">
            <input type="password" class="form-style" placeholder="@Localizer["Auth_Password"]">
        </div>
        <div class="form-group mt-2">
            <input type="password" class="form-style" placeholder="@Localizer["Auth_RepeatPassword"]">            
        </div>
        <div class="terms-checkbox ">
            <MudCheckBox  @bind-Value="@Basic_CheckBox" LabelPosition="LabelPosition.Start" Color="Color.Secondary"></MudCheckBox>
            <label>@Localizer["Auth_AgreePart1"] <a href="https://onet.pl" target="_blank">@Localizer["Auth_AgreePart2"]</a></label>
        </div>
        <RadzenButton Text="@Localizer["Auth_Register"]" class="btn mt-2" Click="changePage" ButtonStyle="Radzen.ButtonStyle.Secondary" Style="color: white; width:100%" />
         
    </div>
</div>
