@page "/"
@layout EmptyLayout
@using Versus.Mobile.Components.Auth.Components
@using Microsoft.Extensions.Localization
@using Versus.Mobile.Resources.Localization
@inject IStringLocalizer<AppStrings> Localizer
@inject NavigationManager NavigationManager
<div class=" justify-content-center">

    <div class="col-12 text-center align-self-center ">
      @*   <h1><span>V</span><span>e</span><span>r</span><span>s</span><span>u</span><span>s</span></h1> *@
        <img class="m-0" style="border:none; box-shadow:none; width:150px;height:150px" src="img/VersusLogo.png" />
        <div class="section pb-1 pt-1 pt-sm-1 text-center">
            <h6 class="mb-0 pb-1"><strong style="margin-right:20px"> @Localizer["Auth_Login"] </strong> <strong> @Localizer["Auth_Register"]</strong></h6>
            <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
            <label for="reg-log"></label>
            <div class="card-3d-wrap mx-auto">
                <div class="card-3d-wrapper">
                    <div class="card-front">
                       <LoginPanel></LoginPanel>
                    </div>
                    <div class="card-back">
                       <RegisterPanel></RegisterPanel>
                    </div>
            </div>
         </div>
      </div>
  </div>
</div>

